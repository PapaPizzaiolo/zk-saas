{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "semi": ["error", "never"],
        "import/extensions": [ 
            "error", 
            "ignorePackages", 
            { "ts": "never" }
        ],
        "lines-between-class-members": [
            "error", 
            "always", 
            { "exceptAfterSingleLine": true }
        ]
    }
}
